[package]
name = "nn_accel"
version = "0.2.0"
edition = "2021"

[lib]
name = "nn_accel"
crate-type = ["cdylib"]

[dependencies]
rayon = "1.8"
numpy = "0.20"
pyo3 = { version = "0.20", features = ["extension-module", "numpy"] }
crossbeam = "0.8"
thiserror = "1.0"

[features]
extension-module = ["pyo3/extension-module"]
default = ["extension-module"]

[dev-dependencies]
criterion = "0.5"
rand = "0.8"